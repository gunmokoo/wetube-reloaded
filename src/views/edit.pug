extends base

block content 
    h4 Update Video
    form( method="POST") 
        input(type="text", name="title", placeholder="Video Tilte", value=video.title, required)
        input(type="text", name="description", placeholder="Description", minlength=20, value=video.description, required)
        input(type="text", name="hashtags", placeholder="Hashtags, separated by comma.", value=video.hashtags.join(), required)
        input(value="Save", type="submit")